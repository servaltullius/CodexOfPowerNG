{
  "$schema": "https://raw.githubusercontent.com/Exit-9B/MCM-Helper/main/docs/config.schema.json",
  "modName": "SVCollection",
  "displayName": "Codex of Power",
  "content": [
    {
      "type": "header",
      "text": "Codex of Power"
    },
    {
      "type": "menu",
      "id": "sLanguageOverride:Main",
      "text": "Language / 언어",
      "help": "Auto uses game language. Override forces English/Korean.",
      "valueOptions": {
        "sourceType": "ModSettingString",
        "defaultValue": "auto",
        "options": ["auto", "en", "ko"],
        "shortNames": ["Auto", "English", "한국어"]
      }
    },
    {
      "type": "keymap",
      "id": "OpenCollection",
      "text": "Open Codex of Power",
      "help": "Opens the quick register menu (unregistered + in inventory).",
      "ignoreConflicts": false
    },
    {
      "type": "toggle",
      "id": "bEnableLootNotify:Main",
      "text": "Loot notification",
      "help": "Show a one-time notification when you pick up an unregistered collectible.",
      "valueOptions": {
        "sourceType": "ModSettingBool",
        "defaultValue": true
      }
    },
    {
      "type": "slider",
      "id": "fRewardMult:Main",
      "text": "Reward multiplier / 보상 배율",
      "help": "Scales all permanent rewards. 1.0 = default, 0 = off.",
      "valueOptions": {
        "sourceType": "ModSettingFloat",
        "defaultValue": 1.0,
        "min": 0.0,
        "max": 2.0,
        "step": 0.1,
        "formatString": "{0}"
      }
    }
  ]
}
